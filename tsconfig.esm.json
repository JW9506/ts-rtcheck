{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "module": "esnext",
    "lib": [
      "DOM",
      "esnext"
    ],
    "outDir": "./dist-esm",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
